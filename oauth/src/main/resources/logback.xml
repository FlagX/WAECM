<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldBlue(OAUTH:) %d{HH:mm:ss.SSS} %highlight(%-5level) %msg - %green(%logger{36}) %n%red(%xEx)</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
